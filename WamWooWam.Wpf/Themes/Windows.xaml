<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PageStyle" BasedOn="{StaticResource {x:Type Page}}" TargetType="{x:Type Page}">
        <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}"/>
    </Style>

    <Style x:Key="WindowStyle" BasedOn="{StaticResource {x:Type Window}}" TargetType="{x:Type Window}">
        <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}"/>
        <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
    </Style>
    
</ResourceDictionary>